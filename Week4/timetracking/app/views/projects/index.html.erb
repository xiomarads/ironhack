<h1> Projects </h1>
<ul style="list-style: none;">
  <% @projects.each do |project| %>
    <!-- <li> <%= project.name %></li> -->
    <li>
      <%= link_to project.name, project_path(project) %>
     <% if project.description != nil && project.description != "" %>
        <%= project.description %>
  <% end %>
</li>
<% end %>
</ul>

<%= link_to "Create a new project", project_new_path %>
