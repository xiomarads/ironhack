

<div class="row">
  <div class="col s9">
<h3 id="daily"> Today's Concerts </h3>

<ul id="concerts-today">
  <% @concertstoday.each do |a_concert| %>
    <li>
      <span class="artist">Artist: <%= link_to a_concert.artist, concert_path(a_concert.id) %></span>
      <span class="location">City: <%= a_concert.city %></span>
    </li>
  <% end %>
</ul>
</div>
<div class="col s3">
<h3 id="monthly"> This Month's Concerts </h3>

<ul id="concerts-today">
  <% @concertsthismonth.each do |month_concert| %>
    <li>
      <span class="artist">Artist: <%= link_to month_concert.artist, concert_path(month_concert.id) %></span>
      <span class="location">City: <%= month_concert.city %></span>
    </li>
  <% end %>
</ul>
</div>
</div>
